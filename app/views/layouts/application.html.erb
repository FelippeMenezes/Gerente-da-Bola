<html>
  <head>
    <title>Gerente Da Bola</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    
    <%= favicon_link_tag '1.png' %>
    <link rel="apple-touch-icon" href="/app/assets/images/1.png">
    <link rel="icon" type="image/png" sizes="192x192" href="/app/assets/images/1.png">
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <!-- Load Bootstrap and Popper JS via Sprockets -->
    <%= javascript_include_tag "popper.js", "data-turbo-track": "reload", defer: true %>
    <%= javascript_include_tag "bootstrap.min.js", "data-turbo-track": "reload", defer: true %>
  </head>
  <body>
    <%= render "shared/navbar" %>
    <%= render "shared/flashes" %>
    <%= yield %>
  </body>
</html>